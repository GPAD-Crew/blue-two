{
    "extends": "@tsconfig/node14/tsconfig.json",
    "compilerOptions": {
        "noImplicitAny": false,
        "outDir": "dist",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "strictPropertyInitialization": false,

        "baseUrl": "./src",
        "paths": {
            "~/*": ["./*"]
        }
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules/**"]
}
